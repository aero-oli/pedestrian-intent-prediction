{
    "name": "Mnist_LeNet",
    "numberOfGpus": 1,
    "architecture": 
    {
        "type": "MnistModel",
        "args": {}
    },
    "dataLoader": 
    {
        "type": "MnistDataLoader",
        "args":
        {
            "dataDirectory": "data\\",
            "batchSize": 128,
            "shuffle": true,
            "validationSplit": 0.1,
            "numberOfWorkers": 1
        }
    },
    "optimizer": 
    {
        "type": "Adam",
        "args":
        {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "negative_likelihood_loss",
    "metrics": 
    [
        "accuracy", "top_k_accuracy"
    ],
    "learningRateScheduler": 
    {
        "type": "StepLR",
        "args": 
        {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": 
    {
        "epochs": 50,
        "saveDirectory": "saved\\",
        "savePeriod": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "earlyStop": 10,
        "tensorboard": true
    }
}
