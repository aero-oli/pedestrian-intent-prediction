{
    "name": "PedestrianIntentPrediction",
    "n_gpu": 1,
    "arch":
    {
        "type": "social_stgcn",
        "args": {}
    },
    "dataLoader":
    {
        "type": "JaadDataLoader",
        "args":
        {
            "annotation_path": "data/datasets/jaad_frame_by_frame_database.pkl",
            "imageDirectoryFormat": "data/", 
            "batchSize": 1,
            "sequenceLength": 30,
            "prediction": false,
            "predictionLength": [15, 30, 45],
            "shuffle": true, 
            "validationSplit": 0.3, 
            "numberOfWorkers": 1, 
            "training": true
        }
    },
    "optimizer":
    {
        "type": "Adam",
        "args":
        {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "negative_likelihood_loss",
    "metrics":
    [
        "accuracy", "top_k_accuracy"
    ],
    "lr_scheduler":
    {
        "type": "StepLR",
        "args":
        {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer":
    {
        "epochs": 1,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    }
}
